<div class="col-md-10 col-md-offset-2 job-content" >
  <div class="row">
    <div class="col-md-12"
<div class="dropdown clearfix pull-right">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" 'Success'>
      排序
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
        <li>
         <%= link_to("按工作地点排序", jobs_path(:order => "by_workplace")) %>
        </li>

        <li>
          <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
        </li>
        <li>
            <%= link_to("按照薪资上限排序", jobs_path(:order => "by_upper_bound")) %>

        </li>
        <li>
          <%= link_to("按照发表时间排序", jobs_path ) %>

        </li>
    </ul>
</div>
</div>
</div>

<!--=== 工作列表 ===-->
<div class="col-md-8 col-md-offset-2">
  <div class="row">
    <% @jobs.each do |job| %>
    <div class="col-md-12 col-xs-12 job-box">
      <!--=== 职位信息 ===-->
      <div class="col-md-6 col-xs-12 info">
        <div class="info-top">
          <h3><%= link_to(job.title, job_path(job), target: "_blank" )%></h3><span><%= job.created_at.strftime("%Y-%m-%d") %></span>
        </div>
        <div class="info-mid">
          <%= job.wage_lower_bound %> k ~ <%= job.wage_upper_bound %> k
        </div>
      </div>

      <!--=== 公司信息 ===-->
      <div class="col-md-6 col-xs-12 company">
        <div class="company-top">
          <span><%= link_to(job.description, job_path(job))%></span>
          <% if current_user && current_user.is_favorite_of?(job) %>
            <%= link_to favorite_job_path(job, type: "unfavorite"), method: :put do %>
              <sapn class="fa fa-star"></sapn>
            <% end %>
          <% else %>
            <%= link_to favorite_job_path(job, type: "favorite"), method: :put do %>
              <sapn class="fa fa-star-o"></sapn>
            <% end %>
          <% end %>
        </div>
        <div class="company-mid">
          <sapn class="fa fa-envelope"></sapn><span><%= job.contact_email %></span>
        </div>
        <div class="company-bot">
          <sapn class="fa fa-map-marker"></sapn><span><%= job.workplace %></span>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


<div class="col-md-10 col-md-offset-1 job-bottom">
<div class="text-center">
  <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
</div>
</div>
